<%= simple_form_for @festival do |f| %>
  <%= f.input :name %>
  <%= f.input :venue %>
  <%= f.input :address %>
  <%= f.input :start_date, as: :date, html5: true %>
  <%= f.input :end_date, as: :date, html5: true %>
  <%= f.input :genre, as: :radio_buttons, collection: [['0', 'Festival'], ['1', 'Conference'], ['2','Other']], label_method: :second, value_method: :first %>
  <%= f.submit %>
<% end %>
