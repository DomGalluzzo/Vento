<div class="container pt-5">
  <div class="row">
  <div class="col-sm-12 col-lg-12">
  
    <% @festivals.each do |festival| %>
      <ul>
        <li><%= festival.name %></li>
        <li><%= festival.venue %></li>
        <li><%= festival.address %></li>
        <li><%= festival.user_id %></li>
        <li><%= festival.start_date %></li>
      </ul>
    <% end %>
  </div>
  </div>

  <div class="row map">
    <div class="card-map col-sm-12 col-lg-12">
      <div class="card-body">
        <div id="map"
            style="width: 100%; height: 200px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
