
<div class="container pt-5">
    <% @festivals.each do |festival| %>
      <h1>Festivals</h1>
      <ul>
        <li><%= festival.name %></li>
        <li><%= festival.venue %></li>
        <li><%= festival.address %></li>
        <li><%= festival.user_id %></li>
        <li><%= festival.start_date %></li>
      </ul>
    <% end %>

<div class="row map">
  <div class="card-map">
    <div class="card-body">
      <div id="map"
          style="width: 100%; height: 200px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
</div>
