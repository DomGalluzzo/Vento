<div class="container">
    <div class="row py-4">
        <div class="col">
            <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
            <ul class="list-unstyled">
                <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
                <li><strong>Insurance</strong>[<%= @order.contract_id %>]</li>
                <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
                </li>
            </ul>
            <%= link_to "Download your contract", contract_path(format: :pdf), class: "btn btn-outline-secondary rounded-pill" %>
        </div>
    </div>
</div>