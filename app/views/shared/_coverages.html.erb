
   <!-- Modal -->
   <div class="modal fade" id="coverages" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
   aria-hidden="true">
   <div class="modal-dialog" role="document">
     <div class="modal-content">
       <div class="modal-header text-center">
         <h4 class="modal-title w-100 font-weight-bold">What kind of coverage would you like?</h4>
         <p>Select all cover options you would like</p>
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
           <span aria-hidden="true">&times;</span>
         </button>
       </div>
       <div class="modal-body mx-3">
         <%= simple_form_for Contract.create do |f| %>
            <%= f.association :contract_plans.plannable %>
         <% end %>
         
       </div>
       <div class="modal-footer d-flex justify-content-center">
         <button class="btn btn-deep-orange" data-toggle="modal" data-dismiss="modal" data-target="#cancellation">next</button>
       </div>
     </div>
   </div>
 </div>

 <%= render 'shared/cancellation' %> 